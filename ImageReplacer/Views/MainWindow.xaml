<Window x:Class="ImageReplacer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:inf="clr-namespace:ImageReplacer.Infrastructure;assembly=ImageReplacer.Infrastructure"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525">
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.ToolbarRegion}" />
            <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.ContentRegion}" />
        </StackPanel>
        <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.PropertiesRegion}" />
    </StackPanel>
</Window>
